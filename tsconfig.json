{
	"compilerOptions": {
		"target": "ES2020",
		"module": "NodeNext",
		"rootDir": "src",
		"moduleResolution": "NodeNext",
		"declaration": true,
		"sourceMap": true,
		// just for the watch mode
		"outDir": "lib",
		"importsNotUsedAsValues": "remove",
		"newLine": "lf",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitAny": true,
		"skipLibCheck": true
	}
}
